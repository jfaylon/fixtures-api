{
  "Fixture": {
    "type": "object",
    "properties": {
      "tournamentId": {
        "description": "Internal ID of the tournament",
        "type": "integer"
      },
      "homeTeamId": {
        "description": "Internal ID of the home team",
        "type": "integer"
      },
      "awayTeamId": {
        "description": "Internal ID of the away team",
        "type": "integer"
      },
      "matchDateTime": {
        "type": "string",
        "description": "Date and Time of the match",
        "format": "date-time"
      },
      "matchStatus": {
        "type": "string",
        "description": "Status of the match",
        "enum": [
          "Not Started",
          "1H",
          "HT",
          "2H",
          "FT",
          "ET 1H",
          "HT ET",
          "ET 2H",
          "FT AET"
        ]
      },
      "homeTeamScore": {
        "description": "Home team's score",
        "type": "integer"
      },
      "awayTeamScore": {
        "description": "Away team's score",
        "type": "integer"
      },
      "homeTeamPenaltyScore": {
        "description": "Home team's penalty score",
        "type": "integer"
      },
      "awayTeamPenaltyScore": {
        "description": "Away team's penalty score",
        "type": "integer"
      }
    },
    "required": [
      "tournamentId",
      "homeTeamId",
      "awayTeamId",
      "matchDateTime",
      "matchStatus",
      "homeTeamScore",
      "awayTeamScore"
    ]
  }
}
  
